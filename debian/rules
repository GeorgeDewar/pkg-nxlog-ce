#!/usr/bin/make -f

#DEB_BUILD_OPTIONS="nocheck"

%:
	dh $@ --with autotools_dev

override_dh_auto_configure:
	dh_auto_configure -- $(EXTRA_CONFIGURE_OPTIONS) --prefix=/usr --libexecdir=/usr/lib --with-cachedir=/var/spool/nxlog --with-configfile=/etc/nxlog.conf --with-pidfile=/var/run/nxlog/nxlog.pid

override_dh_auto_test:
#	(dh_auto_test; echo $?) > test-results

override_dh_auto_install:
	$(MAKE) DESTDIR=$(CURDIR)/debian/nxlog-ce install
	rm -f $(CURDIR)/debian/nxlog-ce/usr/lib/nxlog/modules/*/*.la
	rm -f $(CURDIR)/debian/nxlog-ce/usr/lib/nxlog/modules/*/*.a
	mkdir -p $(CURDIR)/debian/nxlog-ce/etc
	cp $(CURDIR)/debian/nxlog.conf $(CURDIR)/debian/nxlog-ce/etc/
	dh_installinit --name=nxlog --no-restart-on-upgrade --no-start
override_dh_strip:
	dh_strip --dbg-package=nxlog-ce-dbg
override_dh_installdocs:
